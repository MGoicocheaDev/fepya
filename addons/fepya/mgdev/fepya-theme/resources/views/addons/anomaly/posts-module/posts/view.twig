{% extends "theme::layouts/default" %}

{% block content %}
   {% include "theme::partials/breadcrumbs" %}
	<section class="page-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="post post-single">
						<h2 class="post-title">{{ post.title }} </h2>
						<div class="post-meta">
							<ul>
								<li>
									<i class="ion-calendar"></i>
									{{ post.publish_at.format(config_get('streams::datetime.date_format')) }}
								</li>
								<li>
									<i class="ion-android-people"></i>
									Posted by {{ post.author.display_name }}
								</li>
								<li>
									<i class="ion-pricetags"></i>
									{% if post.category %}
					                   
					                        &mdash; {{ html_link(post.category.route('view'), post.category.name) }}
					                    
					                {% endif %}
								</li>
							</ul>
						</div>
						<div class="post-thumb">
								{{post.image.make.class("img-responsive").alt(post.title) | raw }}
						</div>
						<div class="post-content post-excerpt">
							{% block post %}
		                        {{ content|raw }}
		                    {% endblock %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}