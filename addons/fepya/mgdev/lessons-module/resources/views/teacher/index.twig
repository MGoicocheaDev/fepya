{% extends "theme::layouts/default" %}

{% block content %}
    {% include "theme::partials/breadcrumbs" %}
    <section class="section">
    	<div class="container">
    		<div class="row">
    			<div class="teacher-lists">
    				

					<ul>
					{% for teacher in teachers %}
						<li class="col-md-3">
							<div class="teacher-content-list">
								<div class="our-team-image">
									<div class="wrap-image bg-color-primary">
										{{ teacher.photo.make.class("attachment-our_team size-our_team").alt(brand.title).fit(263,240) | raw }}
									</div>
								</div>
								<div class="content-team">
									<h4>{{teacher.name}}</h4>
									<div class="regency">{{teacher.title}}</div>
								</div>
                        	{% if teacher.website != "" or teacher.facebook != "" or teacher.pinterest != "" or teacher.twitter != "" or teacher.google_plus != "" %}
								<div class="contain-social">
									<ul class="social-team">
										{%  if teacher.website != "" %}
											<li>
												<a class="fa-face" target="_blank" href="#">
													<i class="fa fa-globe"></i>
												</a>
											</li>
										{% endif %}
                                        {%  if teacher.facebook != "" %}
											<li>
												<a class="fa-face" target="_blank" href="#">
													<i class="fa fa-facebook"></i>
												</a>
											</li>
                                        {% endif %}
                                        {%  if teacher.pinterest != "" %}
											<li>
												<a class="fa-face" target="_blank" href="#">
													<i class="fa fa-pinterest"></i>
												</a>
											</li>
                                        {% endif %}
                                        {%  if teacher.twitter != "" %}
											<li>
												<a class="fa-face" target="_blank" href="#">
													<i class="fa fa-twitter"></i>
												</a>
											</li>
                                        {% endif %}
                                        {%  if teacher.google_plus != "" %}
											<li>
												<a class="fa-face" target="_blank" href="#">
													<i class="fa fa-google-plus"></i>
												</a>
											</li>
                                        {% endif %}
									</ul>
								</div>
							{% endif %}

							</div>
						</li>
					{% endfor %}
					</ul>
    				{{ teachers.render|raw }}
    			</div>
    		</div>
    	</div>    	
    </section>
{% endblock %}